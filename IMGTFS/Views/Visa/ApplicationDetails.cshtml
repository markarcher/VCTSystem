
@{
    ViewBag.Title = "ApplicationDetails";
}

<h2>ApplicationDetails</h2>

<script src="~/js/visaScripts.js"></script>

<body>
    <form action='@Url.Action("CashCardApplication", "Visa")' method='POST' class="form-inline">

        <div class="container" id="containerNewMemberhip">
           

            <div class="row">
                <div class="col-md-3">
                    <h4>Gender</h4>
                    <label> <input autocomplete="off" name="options" type="radio" /> Male </label> <label> <input autocomplete="off" name="options" type="radio" /> Female </label>
                </div>
                <div class="col-md-3">
                    <h4>Applicant's Details</h4>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4"><label for="lastName">Last Name:</label> <input type="text" /></div>
                <div class="col-md-4"><label for="firstName">First Name:</label> <input type="text" /></div>
                <div class="col-md-4"><label for="middleName">Middle Name:</label> <input type="text" /></div>
            </div>
            <div class="row"  id="contactDetails">
                <div class="col-md-12">
                    <h4>Contact Details</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6"><label for="phoneNo">Phone No:</label> <input type="text" /></div>
                <div class="col-md-6"><label for="contactNo">Contact No:</label> <input type="text" /></div>
            </div>
            <div class="row">
                <div class="col-md-3"><label for="dateOfBirth">Date of Birth:</label> <input type="text" /></div>
                <div class="col-md-3"><label for="placeOfBirth">Place of Birth:</label> <input type="text" /></div>
                <div class="col-md-3"><label for="nationality">Nationality:</label> <input type="text" /></div>
                <div class="col-md-3"><label for="emailAddress">Email Address:</label> <input type="text" /></div>
            </div>
            <div class="row">
                <div class="col-md-6"><label for="presentAddress">Present Address:</label> <input type="text" /></div>
                <div class="col-md-6"><label for="countryOfOrigin">Country Of origin:</label> <input type="text" /></div>
            </div>
            <div class="row">
                <div class="col-md-6"><label for="permanentAddress">Permanent Address:</label> <input type="text" /></div>
                <div class="col-md-6"><label for="idNo&amp;idPresented">ID no and ID Presented:</label> <input type="text" /></div>
            </div>
            <div class="row">
                <div class="col-md-6"><label for="nameOfEmployer">Name Of Employer:</label> <input type="text" /></div>
                <div class="col-md-6"><label for="natureOfWork">Nature of Work:</label> <input type="text" /></div>
            </div>
            <div class="row">
                <div class="col-md-6"><label for="natureOfEmployeeBusiness">Nature of Employee Business:</label> <input type="text" /></div>
                <div class="col-md-6"><label for="sourceOfFunds">Source Of Funds:</label> <input type="text" /></div>
            </div>
            <div class="row">
                <div class="col-md-12"><label for="remettersName">Remitter's Name:</label> <input type="text" /></div>
            </div>
          
        
               
                <div class="row">
                    <div class="form-inline">
                        <div class="col-md-2">
                            <p>Application Status:</p>
                        </div>

                        <div class="col-md-9" >
                            <label class="checkbox-inline">
                                <input type="checkbox" id="inlineCheckbox1" value="encoded"> Encoded
                            </label>
                            <label class="checkbox-inline">
                                <input type="checkbox" id="inlineCheckbox2" value="encoded"> Verified
                            </label>
                            <label class="checkbox-inline">
                                <input type="checkbox" id="inlineCheckbox2" value="encoded"> Approved
                            </label>
                            <label class="checkbox-inline">
                                <input type="checkbox" id="inlineCheckbox2" value="encoded"> Processed
                            </label>
                            <label class="checkbox-inline">
                                <input type="checkbox" id="inlineCheckbox2" value="encoded"> Received
                            </label>
                            <label class="checkbox-inline">
                                <input type="checkbox" id="inlineCheckbox2" value="encoded"> Released
                            </label>
                            <label class="checkbox-inline">
                                <input type="checkbox" id="inlineCheckbox2" value="encoded"> Received by Agent
                            </label>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <p>Date received by Finance:</p>
                    <p>Date received by Agent:</p>
                </div>
     
        </div>
   

        <div class="row top-buffer">
            <div class="pull-right">
                <a class="btn btn-primary btn-lg" href="@Url.Action("AgentSupport","Visa")" role="button">VISA ON HAND</a>
                <button type="submit" class="btn btn-primary btn-lg">Update</button>
                <a class="btn btn-primary btn-lg" href="@Url.Action("AgentSupport","Visa")" role="button">Cancel</a>
            </div>
        </div>


    </form>
</body>